NAME = libftprintf.a
CC = cc
CFLAGS = -Wall -Wextra -Werror -I./includes/
RM = rm -rf

SRCS = ft_printf.c srcs/ft_utils.c srcs/ft_utils_2.c srcs/ft_utils_3.c srcs/ft_utils_4.c \
		srcs/ft_utils_5.c
OBJS = $(SRCS:.c=.o)

all: first_header $(NAME) second_header

$(NAME): $(OBJS)
	$(MAKE) -C ./libft
	cp libft/libft.a $(NAME)
	ar rc $(NAME) $(OBJS)
clean:
	$(MAKE) clean -C ./libft
	$(RM) $(OBJS)
fclean: clean
	$(MAKE) fclean -C ./libft
	$(RM) $(NAME)
re: fclean all

.PHONY: all clean fclean re

info: header

first_header:
	@echo "\n $$FIRST_HEADER \n"

